<!DOCTYPE html>
<html lang="en">
    <!DOCTYPE html>
    <html lang="en">
    
    <head>

      <meta charset="UTF-8">
      <meta name="description" content="PlantBank information application utilizing the Trefle.io plant API">
      <meta name="keywords" content="EJS, CSS, JavaScript, Express (Node), Bootstrap, Font Awesome">
      <meta name="author" content="Yan Li">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
      <title>Plant Information Page</title>
      <script src="https://kit.fontawesome.com/31a00af4ac.js" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    
      <link rel='stylesheet' href='/stylesheets/plantInformation.css' />

      <link rel="preconnect" href="https://fonts.gstatic.com">
      <link href="https://fonts.googleapis.com/css2?family=Lato:wght@900&display=swap" rel="stylesheet">
    
    </head>
<body>

    <section class="d-flex justify-content-center mt-3 mb-3 ">
        <section class="mainContent">
    
          <section class="row mb-5" aria-label="Search Bar">
            <div class="col">
              <div class="card searchStyle">
                <img class="card-img" src="../images/SearchBackground.jpg" height="300px" alt="">
                <div class="card-img-overlay d-flex mx-auto align-items-center col-lg-10 col-12">
                  <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                      <button class="input-group-text" id="searchBtn" role="button"
                        onclick="getSearchResults()">Search</button>
                    </div>
                    <input type="text" class="form-control" id="searchInp" aria-label="SearchBar">
                  </div>
                </div>
              </div>
            </div>
          </section>
    
        <!-- <section class="theBox justify-content-center rowSpacing mb-1"> -->
         <!-- <div class="container pageContainer mt-5 rounded">  -->


            <section class="d-flex justify-content-center ">
            <main>
                <div class="square1 mx-auto" style="width:auto" >
                    <!-- <h1>Square1</h1> -->
                    <!-- <div class="container pageContainer mt-3 mb-2 rounded"> -->
                        <img class="plant_img" src="<%= data.image_url %>" width="450" height="450" alt="<%= data.slug %> image">
                    <!-- </div> -->

                </div>

                <div class="square2 mx-auto" style="width:auto">
                    <div class="container pageContainer1 ">
                        <div class="plant_name">
                        
                        <% if (data.common_name) {%>
                            <h1>
                                <p class="text-center text-white" style="text-transform: capitalize"><%= data.common_name %></p>
                            </h1>
                        <% } else { %> 
                                <p><%= data.scientific_name %></p> 
                        
                        <% } %>
                    
                        </div>
                    </div>

                </div>

                <div class="square3 mx-auto" style="width:auto">

                    <!-- <img class="plant_img" src="<%= data.image_url %>" width="400" height="400" alt="<%= data.slug %> image"> -->
                    <div class="container pageContainer">
                        <!-- <div class="left-side"> -->
                            <div class="row">
                                <div class="col">
                                    <h4>
                                        <p class="text-left text-white">Scientific Name: <%= data.scientific_name %></p>
                                    </h4>
                                </div>
                                <div class="col"> 
                                    <h4>
                                        <p class="text-left text-white">Family: <%= data.main_species.family %></p>
                                    </h4>      
                                </div>
                            </row>
                            
                            <div class="w-100"></div>

                                
                        <!-- <div class="right-side"> -->
                                
                                <div class="col">
                                    <h4>
                                        <p class="text-left text-white">Genus Name: <%= data.genus.name %></p>
                                    </h4>
                                </div>

                                <div class="col"> 
                                    <h4>
                                        <p class="text-left text-white">Family Common Name: <%= data.family_common_name %></p>
                                    </h4>      
                                </div>
                         </div>
                   
                    </div>
                </div>
            </main>
        </section>
</body>
</html>