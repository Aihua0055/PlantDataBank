<!DOCTYPE html>
<html lang="en">
    <!DOCTYPE html>
    <html lang="en">
    
    <head>

      <meta charset="UTF-8">
      <meta name="description" content="PlantBank information application utilizing the Trefle.io plant API">
      <meta name="keywords" content="EJS, CSS, JavaScript, Express (Node), Bootstrap, Font Awesome">
      <meta name="author" content="Yan Li">
      <meta name="viewport" content="width=device-width, initial-scale=1.0">
    
      <title>Plant Information Page</title>
      <script src="https://kit.fontawesome.com/31a00af4ac.js" crossorigin="anonymous"></script>
      <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    
      <link rel='stylesheet' href='/stylesheets/plantInformation.css' />

      <link rel="preconnect" href="https://fonts.gstatic.com">
      <link href="https://fonts.googleapis.com/css2?family=Lato:wght@900&display=swap" rel="stylesheet">
    
    </head>
<body>

    <section class="d-flex justify-content-center mt-3 mb-3 ">
        <section class="mainContent">
    
          <section class="row mb-5" aria-label="Search Bar">
            <div class="col">
              <div class="card searchStyle">
                <img class="card-img" src="../images/SearchBackground.jpg" height="300px" alt="">
                <div class="card-img-overlay d-flex mx-auto align-items-center col-lg-10 col-12">
                  <div class="input-group input-group-lg">
                    <div class="input-group-prepend">
                      <button class="input-group-text" id="searchBtn" role="button"
                        onclick="getSearchResults()">Search</button>
                    </div>
                    <input type="text" class="form-control" id="searchInp" aria-label="SearchBar">
                  </div>
                </div>
              </div>
            </div>
          </section>
    
        <!-- <section class="theBox justify-content-center rowSpacing mb-1"> -->
        <!-- Header or name of the plant -->
        <section class="row justify-content-center gap mb-1">
            <h1 class="text-center">
                <i class="fas fa-xs fa-leaf fa-flip-horizontal"></i>
                <% if (data.common_name) {%>
                    <h1>
                        <p class="text-center text-white" style="text-transform: capitalize"><%= data.common_name %></p>
                    </h1>
                <% } else { %> 
                        <p class="text-center text-white"><%= data.scientific_name %></p> 
                
                <% } %>
                <i class="fas fa-xs fa-leaf"></i>
            </h1>
        </section> 

        <!-- Container for plant info body -->
         <section class="container pageContainer mt-1 rounded"> 
            <!-- first row first col -->
            <section class="row theRow1" aria-label="Plant Info First Row">
              <!-- <div class="card addShadow align-items-center col-lg-6 col-md-6 col-sm-12 col-auto my-lg-1 my-md-5 my-sm-5"> -->
                <div class="space1 col-lg-6 col-md-12 col-sm-6 mt-3 d-flex mx-auto  align-items-center theCol1" 
                             aria-label="space1_img">
                    <img class="plant_img mt-3 mb-1 ml-5" src="<%= data.image_url %>" height="450px" width="400px" alt="<%= data.slug %> image">
                        <!-- <div class="card-body">
                            <h4></h4>
                        </div> -->
                </div>
            
            <!-- first row second col -->
            <!-- <div class="card addShadow align-items-center col-lg-6 col-md-6 col-sm-12 col-auto my-lg-1 my-md-5 my-sm-5"> -->
            <div class="space2 col-lg-6 col-md-12 col-sm-6 mt-3 d-flex align-items-left theCol2 "
                          aria-label="space2_info1"> 
                              <div class="theText mt-4 mb-3 p-5 ">
                                      <ul class="list-group list-group-flush mt-5 p-4">
                                        <li class="list-group-item text-left ">Scientific Name: <%= data.scientific_name %></li>
                                        <li class="list-group-item text-left ">Genus Name: <%= data.genus.name %></li>
                                        <li class="list-group-item text-left ">Family: <%= data.main_species.family %></li>
                                        <li class="list-group-item text-left ">Family Common Name: <%= data.family_common_name %></li>
                                      </ul>
                              
                                  <div class="card-body">
                              </div>
                                      <h4></h4>
                          </div>
             </div>
          </section>  

          <!-- second row  -->
          <section class="row theRow2" aria-label="Plant Info Second Row">
            <!-- <div class="card addShadow align-items-center col-lg-12 col-md-12 col-sm-12 col-auto my-lg-1 my-md-5 my-sm-5"> -->
              <div class="card space3 col-lg-12 col-md-12 col-sm-6 mt-3 d-flex mx-auto my-auto align-items-center theCol3 " 
                          aria-label="space1_img"> 
                          <!-- table -->
                          <h3 class="tableTitle mt-5 mb-4">
                          <i class="fas fa-xs fa-leaf fa-flip-horizontal"></i>
                          More Details
                          <i class="fas fa-xs fa-leaf"></i>
                          </h3>
                          <table class="table table-striped col-auto">
                              <!-- <thead>
                                <h2>
                                  <tr>
                                    <th>Details</th>
                                  </tr>
                                </h2>
                              </thead> -->
                              <tbody>
                                <tr class="table-info">
                                  <th scope="row"> <i class="fas fa-xs fa-leaf fa-flip-horizontal"></i></th>
                                  <% if (data.year) {%>
                                    <td>Year</td>
                                    <td><%= data.year %></td>
                                  <% } else { %> 
                                    <td>Year</td>
                                    <td>N/A</td>
                                  <% } %>
                                    <td><i class="fas fa-xs fa-leaf fa-flip-horizontal"></i></td>
                                  <% if (data.observations) {%>
                                    <td>Location</td>
                                    <td><%= data.observations %></td>
                                  <% } else { %> 
                                    <td>Loation</td>
                                    <td>N/A</td>
                                  <% } %>
                                </tr>
                                <tr>
                                  <th scope="row"><i class="fas fa-xs fa-leaf fa-flip-horizontal"></i></th>
                                  <% if (data.author) {%>
                                    <td>Author</td>
                                    <td><%= data.author %></td>
                                  <% } else { %> 
                                    <td>Author</td>
                                    <td>N/A</td>
                                  <% } %>
                                    <td><i class="fas fa-xs fa-leaf fa-flip-horizontal"></i></td>
                                  <% if (data.Bibliography) {%>
                                    <td>Bibliography</td>
                                    <td><%= data.Bibliography %></td>
                                  <% } else { %> 
                                    <td>Bibliography</td>
                                    <td>N/A</td>
                                  <% } %>
                                </tr>
                                  <tr class="table-info">
                                    <th scope="row"><i class="fas fa-xs fa-leaf fa-flip-horizontal"></th>
                                    <td>Vegetable</td>
                                    <td><%= data.vegetable %></td>
                                    <td><i class="fas fa-xs fa-leaf fa-flip-horizontal"></i></td>
                                    <td>Edible</td>
                                    <td><%= data.main_species.edible %></td>
                                </tr>
                              </tbody>

                          </table>

              </div>

        </section>
                    
      </section>

    </section> 
</body>
       

</html>