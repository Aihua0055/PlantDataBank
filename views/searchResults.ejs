<!DOCTYPE html>
<html lang="en">

<head>
    <title>Search Results</title>

    <script src="https://kit.fontawesome.com/31a00af4ac.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css"
        integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">

    <link rel='stylesheet' href='/stylesheets/result.css' />
</head>

<body>
    <!-- Header or name of the plant -->
    <section class="row justify-content-center mb-1">
        <h1 class="text-center">
            <i class="fas fa-xs fa-leaf fa-flip-horizontal"></i>
                Search Results
            <i class="fas fa-xs fa-leaf"></i>
        </h1>
    </section> 

    <!-- the header and search bar -->
    <section class="d-flex justify-content-center mb-5">

        <section class="result_list">

            <table class="table text-light" id="table" class="text-light" data-toggle="table">
                <thead>
                    <tr>
                        <th>Img</th>
                        <th>Name</th>
                        <th>More Information</th>
                    </tr>
                </thead>
                <tbody>
                    <% for (let i = 0; i < results.length; i++) { %>
                    <tr>
                        <td> <img src="<%= results[i].image_url %>" alt="<%= results[i].slug %> image"
                                onerror="javascript:this.src='../Icons/ImageUnavailible.png'" width="100" height="100">
                        </td>
                        <% if (results[i].slug) { %>
                        <td> <%= results[i].slug %> </td>
                        <% } else { %>
                        <td> <%= results[i].scientific_name %> </td>
                        <% } %>
                        <td> <button class="btn btn-primary btnColoring btn-lg btn-block my-2 detailBtns" onclick="getDetails('<%= results[i].slug %>')"> Plant
                                Details</button>
                        </td>
                    </tr>
                    <% } %>
                </tbody>

            </table>


            <% if (count > 1) { %>
            <button id="prevSearchBtn" class="btn btn-primary btnColoring" role="button" value="<%= count %>">Previous</button>
            <% } %>

            <% if (count < lastPg) { %>
            <button id="nextSearchBtn" class="btn btn-primary btnColoring" role="button" value="<%= count %>">Next</button>
            <% } else { %>
            <!-- Ignore styling this or changing, created solely so the JS still works (it not visible and disabled)-->
            <button id="nextSearchBtn" class="btn btn-primary d-none" disabled role="button"
                value="<%= count %>">Next</button>
            <% } %>

        </section>

    </section>

    <script type="text/javascript" src="../javascripts/searchResults.js"></script>

</body>

<footer class="credits" font-size="small">
    <p class="credit-text">Plant Bank</p>
    <p class="credit-text">Authored by: Iris Li, Liam Rotchford, Yufei Tao</p>
</footer>

</html>